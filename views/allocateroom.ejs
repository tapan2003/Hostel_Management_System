    <!-- banner -->
    <div class="allocate_room">
        <div class="container">
            <form action="/allocateroom" method="POST">
                <table>
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Roll No</th>
                            <th>Student Name</th>
                            <th>Gender</th>
                            <th>Disable</th>
                            <th>Distance (km)</th>
                            <th>Merit Rank</th>
                            <th>Room No</th>
                            <th>Hostel Name</th>
                        </tr>
                    </thead>
                    <br><br>
                    <tbody>
                        <% if (ar.length !==0) { %>
                            <% for (var x=0; x < ar.length; x++) { %>
                                <tr>
                                    <td>
                                        <%= x + 1 %>
                                    </td>
                                    <td>
                                        <%= ar[x].RollNo %>
                                    </td>
                                    <td>
                                        <%= ar[x].FullName %>
                                    </td>
                                    <td>
                                        <%= ar[x].Gender %>
                                    </td>
                                    <td>
                                        <%= ar[x].Disabled %>
                                    </td>
                                    <td>
                                        <%= ar[x].Distance %>
                                    </td>
                                    <td>
                                        <%= ar[x].MeritRank %>
                                    </td>
                                    <td>
                                        <%= ar[x].Room_Id %>
                                    </td>
                                    <td>
                                        <%= ar[x].Hostel_Name %>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                        <br>
                    </tbody>
                </table>
                <button type="submit" id="submit-button">Submit</button>
            </form>
        </div>
    </div>
